<%= render 'home/navbar' %>
<h3 class="text-center mt-5">Welcome to Travel App!</h3>
<h4 class="mt-5">Attractions</h4>
<div class="d-flex flex-row flex-wrap justify-content-around">
    <% current_user.attractions.each do |attraction| %>
        <div class="card" style="width: 10rem;">
            <% if attraction.image_url %>
                <img src=<% attraction.image_url %> class="card-img-top">
            <% else %>
                <img src="https://placehold.co/50" class="card-img-top">
            <% end %>
            <div class="card-body">
                <h5 class="card-title"><%= attraction.name %></h5>
                <p class="card-text"><%= attraction.address %></p>
                <%= button_to "Remove", remove_path, params: { place: { id: attraction.id, type: "attractions" } }, method: :delete, class: "btn btn-danger" %>
            </div>
        </div>
    <% end %>
</div>
<br/>

