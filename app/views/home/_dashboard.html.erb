          <h5 class="card-title text-dark-grey p-2 rounded mb-3"><%= link_to restaurant.name, restaurant_path(restaurant), class: "link-class text-dark-grey" %></h5>
          <p class="card-text mb-auto"><%= restaurant.address %></p>
          <div class="mt-auto">
            <%= button_to "Remove", remove_path, params: { place: { id: restaurant.id, type: "restaurants" } }, method: :delete, class: "btn-clear-orange w-100" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
</div>